{
	"compilerOptions": {
		"target": "es2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts,",
		".next/types/**/*.ts",
		"app/(dashboard)/layout.tsx",
		"app/(dashboard)/layout.tsx",
		".next/types/app/(dashboard)/layout.jsx",
		".next/types/app/(dashboard)/layout.tsx"
	],
	"exclude": ["node_modules"]
}
